<!-- res/layout/activity_main.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5DC"
    android:padding="16dp">

    <!-- Tytuł gry -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gra w kości. Autor: 0000000"
        android:textColor="#FFFFFF"
        android:background="#A52A2A"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="10dp" />

    <!-- Przycisk RZUĆ KOŚĆMI -->
    <Button
        android:id="@+id/btnRollDice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RZUĆ KOŚĆMI"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp" />

    <!-- Obrazy kości -->

    <!-- Wyniki -->

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="91dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Pięć obrazów -->
        <ImageView
            android:id="@+id/dice_1"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:src="@drawable/question" />

        <ImageView
            android:id="@+id/dice_2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:src="@drawable/question" />

        <ImageView
            android:id="@+id/dice_3"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:src="@drawable/question" />

        <ImageView
            android:id="@+id/dice_4"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:src="@drawable/question" />

        <ImageView
            android:id="@+id/dice_5"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:src="@drawable/question" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvRollResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wynik tego losowania: 0"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvTotalScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wynik gry: 0"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <!-- Przycisk RESETUJ WYNIK -->
    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESETUJ WYNIK"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp" />

</LinearLayout>
